extends layout

block content
		a(href="?field=_id&dir=asc") Asc Year
		a(href="?field=_id&dir=desc") Desc Year
		a(href="?field=movies&dir=asc") Asc Movies
		a(href="?field=movies&dir=desc") Desc Movies
		table(border = '2')
			thead
				tr
					th YEAR
					th MOVIES
			tbody
				each movie, i in list
					tr
						td  #{movie._id}
						td  #{movie.movies}


